@model Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 my-4">
        <div class="row pb-2">
            <h2 class="text-primary text-dark">Edit Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN" class="form-control" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label asp-for="ListPrice"></label>
            <input asp-for="ListPrice" class="form-control" />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label asp-for="ListPrice30"></label>
            <input asp-for="ListPrice30" class="form-control" />
            <span asp-validation-for="ListPrice30" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label asp-for="ListPriceHigher30"></label>
            <input asp-for="ListPriceHigher30" class="form-control" />
            <span asp-validation-for="ListPriceHigher30" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select">
                <option disabled selected>--Select Category ID--</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-outline-dark btn-md">Update</button>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary btn-md mx-auto">Back To List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
         