@using Library.Models.Models
@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary text-dark">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-outline-light text-secondary-emphasis btn-sm">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        </div>
    </div>
    <table id="myTable" class="table table-bordered table-striped display">
        <thead>
            <tr>
                <th>Title</th>
                <th>ISBN</th>
                <th>Author</th>
                <th>List Price</th>
                <th>Category</th>
            </tr>
        </thead>
     
    </table>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}

