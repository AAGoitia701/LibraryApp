@model List<Category>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary text-dark" >Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-light text-secondary-emphasis btn-sm">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
        </thead>
    
        <tbody>
            @foreach(var cat in Model.OrderBy(r => r.DisplayOrder))
            {
                <tr>
                    <td>
                       @cat.Name
                    </td>
                    <td>
                        @cat.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-categoryId="@cat.Id" class="btn btn-secondary text-info btn-sm ">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>

                            <a asp-controller="Category" asp-action="Delete" asp-route-categoryId="@cat.Id" class="btn btn-secondary text-danger btn-sm ">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
