@model Category

<form method="post">
    <input asp-for="Id" hidden/> <!--This so we can modify the record and not add a new record on top of the already existing one-->
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary text-dark">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-outline-dark btn-md">Update</button>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary btn-md mx-auto">Back To List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
} 