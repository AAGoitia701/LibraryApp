@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary text-dark">Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div> <!--- Crea una lista donde aparecen todos los errores -->
        <div class="mb-3 row">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-outline-dark btn-md">Create</button>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary btn-md mx-auto">Back To List</a>
            </div>
        </div>
    </div>
</form>
<!-- Adds partial view from the script '_ValidationScriptsPartial', and it will automatically add the js needed -->
@section Scripts{ 
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
} 
<!-- If you want to add a partial view not realted to scripts, you can add only the tag:
    <partial name="_ValidationScriptsPartial"></partial>
-->